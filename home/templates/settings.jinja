{% extends 'base.jinja' %}
{% block content %}
<div class="col-12">
<!-- Page body -->
        <div class="page-body">
          <div class="container-xl">
            <div class="row row-cards">
              <div class="col-md-6">
                <div class="row row-cards">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">Currently registered analysis interfaces</h3>
                      </div>
                      <div class="list-group list-group-flush list-group-hoverable">
                          {% for interface in registered_interfaces %}
                          	<div class="list-group-item">
                          <div class="row align-items-center">
                            <div class="col text-truncate">
                              <a href="/settings/#/{{ interface.id }}" class="text-reset d-block">{{ interface.name }}</a>
                              <div class="d-block text-secondary text-truncate mt-n1">{{ interface.short_description }}</div>
                            </div>
                          </div>
                        </div>
                          {% endfor %}
                        </div>
                      </div>
                    </div>
                  </div></div>
                </div>
              </div>
            </div>
          </div>
        </div>
{% endblock %}