{% macro base_item(display ,href, svg='') %}
<li class="nav-item">
    <a class="nav-link" href="{{ href }}">
    <span class="nav-link-icon d-md-none d-lg-inline-block">
        {{ svg|safe }}
    </span>
    <span class="nav-link-title">
        {{ display }}
    </span>
    </a>
</li>
{%- endmacro %}
{% macro start_dropdown(title, svg='') %}
